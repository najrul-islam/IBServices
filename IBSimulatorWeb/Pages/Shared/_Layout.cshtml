<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] IBSimulator</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/IBSimulatorWeb.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">IBSimulator</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Data"> Data</a>
                        </li>
                        <li class="nav-item">
                            <div class="dropdown">
                                <button type="button" class="btn dropdown-toggle" data-bs-toggle="dropdown"> Command</button>
                                <ul class="dropdown-menu">
                                    <li class="">
                                        <a class="nav-link text-dark" asp-area="" asp-page="/Command"> Day/Night Flag</a>
                                    </li>
                                    <li class="">
                                        <a class="nav-link text-dark" asp-area="" asp-page="/Devices"> Devices</a>
                                    </li>
                                    <li class="">
                                        <a class="nav-link text-dark" asp-area="" asp-page="/DGConfigUpdate"> DGConfig</a>
                                    </li>
                                    <li class="">
                                        <a class="nav-link text-dark" asp-area="" asp-page="/UpdateDeviceIP"> DeviceIP</a>
                                    </li>
                                    <li class="">
                                        <a class="nav-link text-dark" asp-area="" asp-page="/DebugOnOff"> DebugOnOff</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/LastRBE"> Last RBE</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - IBSimulator @*- <a asp-area="" asp-page="/Privacy">Privacy</a>*@
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function(){
            $('li.active').removeClass('nav-active');
            $('a[href="'+location.pathname+'"]').closest('li').addClass('nav-active')
        })
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>